{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "..",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}